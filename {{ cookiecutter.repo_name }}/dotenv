PROJECT_NAME={{ cookiecutter.repo_name }}

if [[ "`dirname "${BASH_SOURCE}"`" == "`pwd`" && -z "`echo $VIRTUAL_ENV | grep $PROJECT_NAME`" ]]; then workon $PROJECT_NAME; fi
